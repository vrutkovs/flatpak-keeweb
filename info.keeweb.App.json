{
    "app-id": "info.keeweb.App",
    "base": "io.atom.electron.BaseApp",
    "base-version": "master",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "keeweb",
    "tags": ["nightly"],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "keeweb",
            "no-autogen": true,
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/keeweb/keeweb",
                    "branch": "v1.4.0"
                },
                {
                    "path": "Makefile",
                    "type": "file"
                },
                {
                    "path": "binary-keeweb",
                    "type": "file"
                },
                {
                    "path": "keeweb.desktop",
                    "type": "file"
                }
            ]
        }
    ]
}
